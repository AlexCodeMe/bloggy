generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(cuid())
  title       String
  description String?
  content     String
  bannerImage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // categoryId String?
