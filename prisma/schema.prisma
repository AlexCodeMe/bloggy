generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  username String  @unique
  password String
  name     String?

  // Link user to posts
}

model Post {
  id          String   @id @default(cuid())
  title       String
  description String?
  content     String
  bannerImage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // link post to user
  // link post to category
  // link post to tags
}

